generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  password  String

  // Satu user bisa punya satu undangan 
  invitation Invitation?
}

// Tabel buat ngatur undangan dan template yang dipilih
model Invitation {
  id           String   @id @default(cuid())
  slug         String   @unique 
  templateName String   @default("modern") 
  
  // Data Mempelai
  groomName    String
  brideName    String
  
  // Data Acara 
  date         DateTime
  location     String
  mapsUrl      String?

  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Relasi ke tamu
  guests       Guest[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// Tabel  RSVP Tamu
model Guest {
  id           String   @id @default(cuid())
  name         String
  whatsapp     String?
  status       RsvpStatus @default(PENDING) 
  pax          Int      @default(1) 

  invitationId String
  invitation   Invitation @relation(fields: [invitationId], references: [id], onDelete: Cascade)

  createdAt    DateTime @default(now())
}

enum RsvpStatus {
  PENDING
  ATTENDING
  DECLINED
}